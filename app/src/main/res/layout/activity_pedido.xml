<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pedido_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Título principal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:text="Gestión de Pedidos"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Campo Número de mesa -->
    <EditText
        android:id="@+id/edtNumeroMesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/edit_text"
        android:hint="Número de Mesa"
        android:inputType="number"
        android:padding="8dp" />

    <!-- Campo Comentario -->
    <EditText
        android:id="@+id/edtComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/edit_text"
        android:hint="Comentario (opcional)"
        android:padding="8dp" />

    <!-- Spinner para seleccionar el plato -->
    <Spinner
        android:id="@+id/spnPlato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Campo Cantidad -->
    <EditText
        android:id="@+id/edtCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/edit_text"
        android:hint="Cantidad"
        android:inputType="number"
        android:padding="8dp" />

    <!-- Spinner Estado -->
    <Spinner
        android:id="@+id/spnEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:entries="@array/estados_pedido" />

    <!-- CheckBox Pagado -->
    <CheckBox
        android:id="@+id/chkPagado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Pagado" />

    <!-- Botón Guardar Pedido -->
    <Button
        android:id="@+id/btnGuardarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Guardar Pedido"
        android:textColor="#FFFFFF" />

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CCCCCC" />

    <!-- Título de lista -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Lista de Pedidos"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- RecyclerView para mostrar pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPedidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>
